<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Allow existing files/directories and backend routes to pass through
  RewriteRule ^(api|graphql|auth)(/|$) - [L]
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Send all other requests to the SPA entry point
  RewriteRule . /index.html [L]
</IfModule>

# If mod_rewrite is unavailable, fall back to serving the SPA entry point
<IfModule !mod_rewrite.c>
  FallbackResource /index.html
</IfModule>
