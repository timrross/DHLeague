RewriteEngine On
RewriteBase /

# 1) Don’t interfere with real files or directories (CSS, JS, assets, etc.)
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# 2) Don’t rewrite API or other backend paths that should hit Node directly
RewriteRule ^(api|graphql|auth)(/|$) - [L]

# 3) Everything else goes to the SPA entry point
RewriteRule . /index.html [L]
